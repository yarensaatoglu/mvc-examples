@using OgrenciNotMvc.Models.EntityFramework;
@model List<TBLDERSLER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class=" = table table-bordered">
    <tr>
        <th>DERS ID</th>
        <th>DERS AD</th>
        <th>İŞLEMLER</th>
    </tr>
    <tbody>
        @foreach(var ders in Model)
        {
            <tr>
                <td>@ders.DERSID</td>
                <td>@ders.DERSAD</td>
                <td><a href="/Default/Sil/@ders.DERSID" class="btn btn-danger">Sil</a>
                <a href="/Default/DersGetir/@ders.DERSID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Default/YeniDers" class="btn btn-primary">Yeni Ders Kaydı</a>


