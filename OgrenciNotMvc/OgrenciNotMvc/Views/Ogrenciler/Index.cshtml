@using OgrenciNotMvc.Models.EntityFramework;
@model List<TBLOGRENCILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-bordered">
    <tr>
        <th>OGRENCİ ID</th>
        <th>ADI</th>
        <th>SOYADI</th>
        <th>CİNSİYETİ</th>
        <th>KULUP</th>
        <th>İŞLEMLER</th>
    </tr>
    <tbody>
        @foreach (var ogr in Model)
        {
            <tr>
                <td>@ogr.OGRENCIID</td>
                <td>@ogr.OGRENCIAD</td>
                <td>@ogr.OGRENCISOYAD</td>
                <td>@ogr.OGRENCICINSIYET</td>
                <td>@ogr.OGRENCIKULUP</td>
                <td><a href="/Ogrenciler/Sil/@ogr.OGRENCIID" class="btn btn-danger">Sil</a>
                <a href=" /Ogrenciler/OgrenciGetir/@ogr.OGRENCIID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Ogrenciler/OgrenciEkle" class="btn btn-primary">Yeni Öğrenci Ekle</a>

